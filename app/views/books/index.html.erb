



	<div class="container">
		<div class="row">
				  	<div class="col-xs-3">
						<%= render 'books/list', book: @book, user: @user %>
					</div>




				    <div class="col-xs-9">
							<h3>Bookers</h3>

							<table class="table">
								<thead>
				                    <tr>
				                        <th></th>
				                        <th>Title</th>
				                        <th>Opinion</th>
				                        <th colspan="3"></th>
				                    </tr>
				                </thead>
								<tbody>
								<% @books.each do |book| %>
								<tr>
								<td><a>
									<%= attachment_image_tag @user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %>
									</a>
								</td>
								<td>
									<%= link_to book.title, book_path(book.id)
									%>
								</td>
								<td>
								<%= book.body %>
								</td>
								</tr>
								<% end %>
								</tbody>
							</table>
					</div>
		</div>
	</div>

