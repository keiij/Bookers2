<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <%= render 'books/list', book: @book, user: @user %>
        </div>

        <% if flash[:notice] %>
          <div class="flash">
            <%= flash[:notice] %>
          </div>
        <% end %>


        <div class="col-xs-9">
            <h3>Books</h3>
            <table class="table table-hover table-inverse">

                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>

                <tbody>
                    <% @books.each do |book| %>
                    <tr>
                        <td>
                            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
                        <td>
                        <%= link_to book.title, book_path(book) %>
                        </td>
                        <td>
                        <%= book.body %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>


                </div>
            </table>
        </div>
    </div>
</div>





